# Postmark Configuration
# Get your API key from https://account.postmarkapp.com/servers
POSTMARK_API_KEY=your-postmark-server-token-here
POSTMARK_FROM_EMAIL=noreply@projectbrayford.com
POSTMARK_FROM_NAME=Project Brayford

# Email Development Mode
# Set to 'true' to log emails to console instead of sending via Postmark
# Set to 'false' for production email delivery
EMAIL_DEV_MODE=true

# Optional: Override default rate limits (per minute)
# These values override the defaults in @brayford/core
# EMAIL_RATE_LIMIT_INVITATION=10
# EMAIL_RATE_LIMIT_PASSWORD_RESET=5
# EMAIL_RATE_LIMIT_VERIFICATION=5
# EMAIL_RATE_LIMIT_EVENT_REMINDER=100
# EMAIL_RATE_LIMIT_WEEKLY_DIGEST=100
# EMAIL_RATE_LIMIT_MARKETING=100
# EMAIL_RATE_LIMIT_BILLING_INVOICE=20
# EMAIL_RATE_LIMIT_ORGANIZATION_DELETION=1
