{
  "name": "@brayford/core",
  "version": "0.1.0",
  "private": true,
  "description": "Shared types, schemas, and constants for Project Brayford",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./schemas": "./dist/schemas/index.js",
    "./test-helpers": "./dist/__tests__/helpers/test-factories.js"
